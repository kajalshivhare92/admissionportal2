<%- include('../header.ejs') %>
<br><br><br><br><br><br>
<div class="modal-body">
    <form action="/course_update/<%= d._id %>" method="post">
      <div class="mb-3">
        <label class="form-label">Name:</label>
        <input type="text" class="form-control" name="name" value="<%= d.name %>">

      </div>
      <div class="mb-3">
        <label class="form-label">Email:</label>
        <input type="email" class="form-control" name="email" value="<%= d.email %>" >

      </div>
      <div class="mb-3">
        <label class="form-label">Mobile Number:</label>
        <input type="" class="form-control" name="mobile_number" value="<%= d.mobile_number %>">

      </div>
      <div class="mb-3">
        <label class="form-label">Address:</label>
        <textarea name="address" id="" cols="30" rows="10" class="form-control"><%= d.address %> </textarea>
       </div>

       <div class="mb-3">
        <label>Gender:</label>
        <input class="form-check-input" type="radio" value="Male" name="gender" id="exampleRadios1" <%= d.gender=='Male'?'checked':'' %>>
        <label class="form-check-label" for="exampleRadios1">Male</label>
        <input class="form-check-input" type="radio" value="Female" name="gender" id="exampleRadios2" <%= d.gender=='Female'?'checked':'' %>>
        <label class="form-check-label" for="exampleRadios2">Female</label>
        </div>

      
       <div class="mb-3">
        <label>Qualification:</label>
        <select class="formcontrol" name="qualification">
          <option <%= d.qualification =='10th'?'selected':'' %>>10th</option>
          <option <%= d.qualification =='12th'?'selected':'' %>>12th</option>
          <option <%= d.qualification=='Degree'?'selected':'' %>>Degree</option>
          <option <%= d.qualification=='Other'?'selected':'' %>>Other</option>
          
          
        </select>
       </div>  
      <div class="mb-3">
        <label class="form-label">Course</label>
        <input type="text" value="bca" class="form-control" name="course" readonly>
       </div>
   
      <button type="submit" class="btn btn-primary">Update</button>
    </form>  
  </div>
 

<br>
<%- include('../footer.ejs') %>